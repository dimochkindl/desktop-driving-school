<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="500.0" spacing="20.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.db.controllers.MainWindowController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TableView fx:id="mainTable" prefHeight="448.0" prefWidth="200.0">
    </TableView>
    <VBox prefHeight="200.0" prefWidth="100.0">
        <HBox alignment="BASELINE_CENTER" prefHeight="100.0" prefWidth="200.0">
            <MenuButton fx:id="tableChoice" mnemonicParsing="false" text="Choose table">
            </MenuButton>
            <MenuButton fx:id="modeChoice" alignment="TOP_CENTER" mnemonicParsing="false" text="Choose mode">
            </MenuButton>
            <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="74.0" text="Delete" visible="false" />
         <Button fx:id="packetModeButton" contentDisplay="RIGHT" mnemonicParsing="false" text="Packet mode" />
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <Button fx:id="print" alignment="BOTTOM_RIGHT" focusTraversable="false" mnemonicParsing="false" text="Print" />
        </HBox>
    </VBox>
</VBox>
